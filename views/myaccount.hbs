<div style="background: url(http://www.line-tatsujin.com/stamp/outline/a30455-0.png) no-repeat 1200px 0px;">
    <div class="content1">
        <h2>My account</h2>
        <a class="btn btn-light" onclick="history.back()">Back</a>
        <a class="btn btn-light" onclick="location.reload(true)">Refresh</a>
        <a class="btn btn-light" onclick="location.href='http://localhost:3000'">Go to Main</a>

        <a class="text-monospace" href="http://localhost:3000/myaccount/"></a>
        <br><br>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="btn btn-info" href="/idea"><span class="button2">Create an Idea</span></a>
            </li>
        </ul>
        <br>
        <br>
        <h4>My Idea</h4>
        <div class="wrapper">
            {{#each ideas }}
            <p class="box1">
                <font size="6"><b>#{{ id }} - {{ this.summary }}</b> <br>
                    <font size="5" color="gray"> Limit of Participants :{{ this.numberOfParticipant }} people</font>
                    <br>
                    Description : <br>
                    　　<font color="#808000">{{ this.description }}</font><br>
                    <br>
                    Initial Cost : <font color="#808000">{{ currency this.initialCost}}</font> <br>
                    Monthly Running Cost : <font color="#808000">{{ currency this.runningCost }} </font><br>
                    Number of Month to pay off debt : <font color="#808000">{{ this.goalYears}}th month</font><br><br>
                    Participants: <br>
                    {{#each this.participants}}
                    Name-<font color="#0033CC">{{ this.name }} </font><br>
                    Email-<font color="#0033CC">{{ this.email }} </font><br>
                    Position-<font color="#0033CC">{{ this.position }} </font><br>
                    Reason-<font color="#0033CC">{{ this.reason }} </font><br>
                    <br>
                    {{/each}}
                    {{#each this.comments}}
                    Comment: <font color="#808000">{{ this.comment }} </font><br>
                    {{/each}}
                    <br><br>
                    <a href="/analysis/{{ this.id }}" class="badge badge-pill badge-danger"><span
                            class="button４">ANALYSIS</span></a>
                    <a href="/edit/{{ this.id }}" class="badge badge-pill badge-warning"><span
                            class="button４">EDIT</span></a>
                    <a href="/delete/{{ this.id }}" class="badge badge-pill badge-dark" data-id="{{ this.id }}"><span
                            class="button４">DELETE</span></a>
            </p>

            {{/each}}
        </div>

        <h4>Joined Idea</h4>
        <div class="wrapper">
            {{#each ideas }}
            <p class="box1">
                <font size="6"><b>#{{ id }} - {{ this.summary }}</b> <br>
                    <font size="5" color="gray"> Limit of Participants :{{ this.numberOfParticipant }} people</font>
                    <br>
                    Description : <br>
                    　　<font color="#808000">{{ this.description }}</font><br>
                    <br>
                    Initial Cost : <font color="#808000">{{ currency this.initialCost}}</font> <br>
                    Monthly Running Cost : <font color="#808000">{{ currency this.runningCost }} </font><br>
                    Number of Month to pay off debt : <font color="#808000">{{ this.goalYears}}th month</font><br>
                    Participants: <font color="#808000">{{ this.participants }} <br></font><br>
                    Comment: <font color="#808000">{{ this.comments }} </font><br>
                    <br><br>
                    <a href="/analysis/{{ this.id }}" class="badge badge-pill badge-danger"><span
                            class="button４">ANALYSIS</span></a>
                    <a href="/edit/{{ this.id }}" class="badge badge-pill badge-warning"><span
                            class="button４">EDIT</span></a>
                    <a href="/delete/{{ this.id }}" class="badge badge-pill badge-dark" data-id="{{ this.id }}"><span
                            class="button４">DELETE</span></a>
            </p>

            {{/each}}
        </div>
    </div>
</div>