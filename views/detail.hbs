<h2>Detail Page - Idea # :{{ id }} - {{ idea.summary }}</h2>
        <a type="button" class="btn btn-light" onclick="history.back()">Back</a>
        <a type="button" class="btn btn-light" onclick="location.reload(true)">Refresh</a>
        <a type="button" class="btn btn-light" onclick="location.href='http://localhost:3000'">Go to Main</a>
    
<form action="/deital/:id" method="POST">
<div id={{ id }}>
    summary : {{ idea.summary }}
    <br>
    description : {{ idea.description }}
    <br>
    InitialCost : {{ idea.initialCost }}
    <br>
    RunningCost : {{ idea.runningCost }}
    <br>
    Limit of Participants : {{ idea.numberOfParticipant }}
    <br>
    Goal Years : {{ idea.goalYears }}
    <br>
    Participants : {{ participants.name }}
    <br>
    Comment : <textarea rows="10" cols="80" name="Comments"></textarea>
<br>
    Comments : {{ Comment }}
</div>

</form>